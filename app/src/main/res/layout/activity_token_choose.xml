<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TokenChooseActivity"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:text="O Player 1 tem a vantagem!"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:text="Escolha seu token"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="100dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

    </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="150px"
                android:orientation="horizontal"
                >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:button="@drawable/x_btn_radio"
                        android:buttonTint="@color/blueblue"
                        >
                    </RadioButton>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:button="@drawable/o_btn_radio"
                        android:buttonTint="@color/teal_200"
                        >

                    </RadioButton>

            </RadioGroup>


    <Button
        android:id="@+id/continuarButton"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:text="  continuar  "
        android:background="@drawable/rounded_button"
        android:textColor="#B8DDFF"
        android:fontFamily="@font/noto_sans_bold"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        />

    <ImageButton
        android:id="@+id/voltar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_botaovoltar"
        android:layout_marginTop="200px"
        />


</LinearLayout>