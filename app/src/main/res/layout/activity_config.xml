<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_xoicon"
        android:paddingBottom="20dp"
        />
    <!--*******************Seção alteração do player 01*******************-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="530dp"
        android:background="@drawable/ic_menu_box"

        >

        <LinearLayout
            android:id="@+id/player1_token_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:paddingBottom="10dp"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            >

            <ImageButton
                android:id="@+id/esquerda_seletor_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_botao_seletor_left"
                android:backgroundTint="#B9AFFF"
                />

            <ImageView
                android:id="@+id/pfp_default_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pfp_default"

                />

            <ImageButton
                android:id="@+id/direita_seletor_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_botao_seletor_right"
                android:backgroundTint="#B9AFFF"
                />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/player1_token_selector"

            android:layout_marginTop="75dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

            <TextView
                android:id="@+id/player1_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                android:textSize="19sp"
                />

            </LinearLayout>

            <EditText
                android:id="@+id/alterar_nome_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Alterar o Nome"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:background="@drawable/formato_borda_alterar_nome"
                android:height="30dp"
                android:width="150dp"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                />

        </TableLayout>

        <!--*******************Seção alteração do player 02*******************-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_marginTop="50dp"

            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/table_p2"
            android:layout_marginBottom="125dp"

            >

            <ImageButton
                android:id="@+id/esquerda_seletor_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_botao_seletor_left"
                android:backgroundTint="#C9ACFF"
                />

            <ImageView
                android:id="@+id/pfp_default_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pfp_default"

                />

            <ImageButton
                android:id="@+id/direita_seletor_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_botao_seletor_right"
                android:backgroundTint="#C9ACFF"
                />

        </LinearLayout>

        <TableLayout
            android:id="@+id/table_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            >

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

            <TextView
                android:id="@+id/player2_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                android:textSize="19sp"
                />

            </LinearLayout>

            <EditText
                android:id="@+id/alterar_nome_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Alterar o Nome"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:background="@drawable/formato_borda_alterar_nome"
                android:height="30dp"
                android:width="150dp"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                />

            <ImageButton
                android:id="@+id/salvar_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ok_btn"
                android:backgroundTint="#CFACFF"
                />

        </TableLayout>


    </RelativeLayout>

    <ImageButton
        android:id="@+id/voltar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_botaovoltar"
        />

    </LinearLayout>

