<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:text="JOGO DA VELHA"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        >

        <ImageView
            android:id="@+id/xicon"
            android:src="@drawable/ic_x_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <ImageView
            android:id="@+id/oicon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_o_icon"

            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:text="Escolha seu modo de jogo"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:layout_marginVertical="50dp"
        />

    <Button
        android:id="@+id/pvpButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="  Player Vs Player  "
        android:background="@drawable/rounded_button"
        android:textColor="#B8DDFF"
        android:fontFamily="@font/noto_sans_bold"
        android:textSize="20sp"
        android:layout_marginVertical="20dp"
        />

    <Button
        android:id="@+id/pveButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Player Vs MÃ¡quina"
        android:background="@drawable/rounded_button"
        android:textColor="#B8DDFF"
        android:fontFamily="@font/noto_sans_bold"
        android:textSize="20sp"
        android:layout_marginBottom="50dp"
        />

    <ImageButton
        android:id="@+id/configuracoes"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_buttonconfig"
        android:layout_marginTop="50px"
        />


</LinearLayout>