<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_window_focused="false"
        android:drawable="@drawable/ic_o_radiobuttonon" />
    <item android:state_checked="false" android:state_window_focused="false"
        android:drawable="@drawable/ic_o_radiobuttonoff" />

    <item android:state_checked="true" android:state_pressed="true"
        android:drawable="@drawable/ic_o_radiobuttonon" />
    <item android:state_checked="false" android:state_pressed="true"
        android:drawable="@drawable/ic_o_radiobuttonoff" />

    <item android:state_checked="false" android:drawable="@drawable/ic_o_radiobuttonoff" />
    <item android:state_checked="true" android:drawable="@drawable/ic_o_radiobuttonon" />

</selector>